{
  "name": "apollo-connector-mongodb",
  "version": "4.0.0",
  "description": "Apollo connector for mongodb with caching support",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "mocha --require ts-node/register --extensions ts,tsx --exit --report lcovonly src/tests/*.ts --bail",
    "coverage": "NODE_ENV=test nyc npm test && nyc report --reporter=lcov",
    "coveralls": "NODE_ENV=test nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "typings": "./dist/index.d.ts",
  "keywords": [
    "Apollo",
    "Connector",
    "Mongodb"
  ],
  "author": "Tomi Trescak",
  "license": "MIT",
  "eslintConfig": {
    "extends": "./eslint.js"
  },
  "dependencies": {
    "dataloader": "^2.0.0",
    "mongodb": "^4.0.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.48",
    "@types/proxyquire": "^1.3.28",
    "@types/sinon": "^10.0.0",
    "@types/lru-cache": "^5.1.0",
    "assert": "^2.0.0",
    "coveralls": "^3.0.0",
    "lru-cache": "^6.0.0",
    "mocha": "^9.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^15.0.0",
    "proxyquire": "^2.0.0",
    "sinon": "^12.0.0",
    "sinon-test": "^3.0.0",
    "ts-node": "latest",
    "typescript": "latest"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "src/index.ts",
      "**/*.d.ts",
      "src/typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "all": true
  }
}
