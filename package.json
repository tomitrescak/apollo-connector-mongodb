{
  "name": "apollo-connector-mongodb",
  "version": "1.1.2",
  "description": "Apollo connector for mongodb",
  "main": "./dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "mocha --require ./setup.js --report lcovonly src/tests/*.ts --compilers ts:ts-node/register --bail",
    "coverage": "NODE_ENV=test nyc npm test && nyc report --reporter=lcov",
    "coveralls": "NODE_ENV=test nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "typings": "./dist/index.d.ts",
  "keywords": [
    "Apollo",
    "Connector",
    "Mongodb"
  ],
  "author": "Tomi Trescak",
  "license": "MIT",
  "eslintConfig": {
    "extends": "./eslint.js"
  },
  "dependencies": {
    "@types/lru-cache": "^2.5.32",
    "assert": "^1.4.1",
    "dataloader": "^1.2.0",
    "import-to-commonjs": ">=0.0.3",
    "meteor-random": "0.0.3",
    "mongodb": "^2.2.9"
  },
  "devDependencies": {
    "coveralls": "^2.11.12",
    "lru-cache": "^4.0.1",
    "mocha": "^3.0.2",
    "mocha-lcov-reporter": "^1.2.0",
    "nyc": "^8.1.0",
    "power-assert": "^1.4.1",
    "proxyquire": "^1.7.10",
    "sinon": "^2.0.0-pre.2",
    "sinon-test": "0.0.1",
    "ts-node": "^1.3.0",
    "typescript": "^2.0.2"
  },
  "peerDependencies": {
    "mongodb": "^2.2.9"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "src/index.ts",
      "**/*.d.ts",
      "src/typings"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "all": true
  }
}
