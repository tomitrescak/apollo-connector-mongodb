{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "es5",
      "es2016",
      "es2015.promise",
      "es2015.collection"
    ],
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strictNullChecks": false,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.*"
  ]
}
